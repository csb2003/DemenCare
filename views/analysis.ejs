    <div class="container">
        <h2>Dementia Type Analysis</h2>
        <form id="diseaseForm">
            <label>Memory loss that disrupts daily life</label>
            <input type="range" name="typeA" min="1" max="4" step="1">
            <span class="slider-value">1</span>

            <label>Losing track of dates and/or knowing current locations</label>
            <input type="range" name="typeA" min="1" max="4" step="1">
            <span class="slider-value">1</span>

            <label>Wandering and getting lost</label>
            <input type="range" name="typeA" min="1" max="4" step="1">
            <span class="slider-value">1</span>

            <label>Difficulty completing tasks such as bathing</label>
            <input type="range" name="typeA" min="1" max="4" step="1">
            <span class="slider-value">1</span>

            <label>Behaviour or dramatic personality changes such as stealing, increased in sex or deterioration in personal hygiene habits</label>
            <input type="range" name="typeB" min="1" max="4" step="1">
            <span class="slider-value">1</span>

            <label>Loss of interest in normal activities</label>
            <input type="range" name="typeB" min="1" max="4" step="1">
            <span class="slider-value">1</span>

            <label>Hesitation while speaking</label>
            <input type="range" name="typeB" min="1" max="4" step="1">
            <span class="slider-value">1</span>

            <label>Frequent mood changes</label>
            <input type="range" name="typeB" min="1" max="4" step="1">
            <span class="slider-value">1</span>

            <label>Visual Hallucinations</label>
            <input type="range" name="typeC" min="1" max="4" step="1">
            <span class="slider-value">1</span>

            <label>Movement disorders</label>
            <input type="range" name="typeC" min="1" max="4" step="1">
            <span class="slider-value">1</span>

            <label>Poor regulation of body function</label>
            <input type="range" name="typeC" min="1" max="4" step="1">
            <span class="slider-value">1</span>

            <label>Trouble with sleep</label>
            <input type="range" name="typeC" min="1" max="4" step="1">
            <span class="slider-value">1</span>
            
            <button type="button" onclick="calculateDisease()">Calculate</button>
        </form>
        <p id="result" style="font-size: x-large;"></p>
    </div>


    <script>
        function calculateDisease() {
            const typeA = calculateSum("typeA");
            const typeB = calculateSum("typeB");
            const typeC = calculateSum("typeC");

            const maxSum = Math.max(typeA, typeB, typeC);
            let resultText = "";

            if (maxSum === typeA) {
                resultText = "You may have Alzheimers.";
            } else if (maxSum === typeB) {
                resultText = "You may have Frontotemporal.";
            } else if (maxSum === typeC) {
                resultText = "You may have Lewi Body.";
            } else {
                resultText = "No specific disease type detected.";
            }

            document.getElementById("result").textContent = resultText;
        }

        function calculateSum(type) {
            const sliders = document.querySelectorAll(`input[name=${type}`);
            let sum = 0;
            sliders.forEach((slider) => {
                sum += parseInt(slider.value);
            });
            return sum;
        }

        // Update slider values display
        const sliderInputs = document.querySelectorAll('input[type="range"]');
        sliderInputs.forEach((sliderInput) => {
            const sliderValue = sliderInput.nextElementSibling;
            sliderInput.addEventListener('input', function () {
                sliderValue.textContent = this.value;
            });
        })
    </script>
